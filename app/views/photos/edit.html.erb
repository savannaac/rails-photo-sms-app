        <!-- <%= render "form" %> -->

        <%= f.label "photo url" %>
        <%= f.text_field :img_url %><br><br>

        <%= f.label "description" %>
        <%= f.text_field :description %>

        <%= f.collection_select :public, Photo::CHOICES, :to_s, :to_s %><br /><br />

        <%= f.submit "update" %>
    <% end %>

